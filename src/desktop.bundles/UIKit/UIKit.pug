doctype html
html(lang="en")
  head
  body
    include ../../common.blocks/logo/logo.pug
    include ../../common.blocks/textField/textField.pug
    include ../../common.blocks/dropdownField/dropdownField.pug
    include ../../common.blocks/button/button.pug
    include ../../common.blocks/radioButton/radioButton.pug
    .colorAndType
      .PresentationBlock__color
        -
          var colorItem = [
              {color: 'color1', colorName: 'Dark Shade 100%', colorCode: '#1F2041' },
              {color: 'color1Opacity75', colorName: 'Dark Shade 75%', colorCode: '#1F2041' },
              {color: 'color1Opacity50', colorName: 'Dark Shade 50%', colorCode: '#1F2041' },
              {color: 'color1Opacity25', colorName: 'Dark Shade 25%', colorCode: '#1F2041' },
              {color: 'color1Opacity05', colorName: 'Dark Shade 5%', colorCode: '#1F2041' },
              {color: 'color2', colorName: 'Purple', colorCode: '#BC9CFF' },
              {color: 'color3', colorName: 'Green', colorCode: '#6FCF97' }
            ];
        each item in colorItem
          .colorBox
            .colorBox__colorDemonstration(class="colorBox__colorDemonstration_color_" + item.color)
            .colorBox__Discription
              h2 !{item.colorName}
              h2 !{item.colorCode}
              
      .PresentationBlock__text
        h1 This one is the sub-section or widget title
        h2 Next one is the item title inside widgets
        h3 This is a label or CTA text
        p This is the body text which is used for most of the design, like paragraphs, lists, etc.
    .formElements
      .PresentationBlock__formField
        +textField("Email", "Text Field")
        +dropdownField("guests", "Dropdown")
      .PresentationBlock__button
        +button("click me", "theme_textOnly", "color_color2")
        +button("click me", "theme_textOnly", "color_color1Opacity50") 
        br
        +button("click me", "theme_withBorder")
        +button("click me", "theme_withBorder")(disabled)
        br
        +button("click me", "theme_fillBcg")
        +button("click me", "theme_fillBcg")(disabled)
        br
        +button("перейти к оплате", "theme_fillBcg", "size_l")
      .PrePresentationBlock__radioButton
        -
          var sexItems = [
            {id:'boy', label:'Мужчина'},
            {id:'girl', label:'Женщина'}
          ];
        +radioButtons("sex", sexItems)
    .cards
    .headers
    .footers