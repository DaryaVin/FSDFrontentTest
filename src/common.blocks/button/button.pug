//- (class=isLikeButton ? "button_theme_withBorder" : "")
mixin button(value, ...modifiers)
  - var className = ""
  - var arrowForward = false
  - var isLikeButton = false
  each modifier in modifiers
    - className += " button_"+modifier
    - if (modifier == "size_l") arrowForward = true
    - if (modifier == "theme_like") isLikeButton = true
  button.button(class=className)&attributes(attributes) !{value}
    if arrowForward
      svg.arrowForward.button__arrowForward(width="18", height="18", viewBox="0 0 18 18", fill="none", xmlns="http://www.w3.org/2000/svg")
        path(fill="white", d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z")
    if isLikeButton
      .heart.button__heart
        .heart__inside