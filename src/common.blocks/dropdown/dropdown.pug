mixin dropdown(id)
  - blocks = {}
  block
  .dropdown(id="dropdown" + id)&attributes(attributes)
    div.dropdown__dropdownButton.spaceBetweenContener(id="dropdown__dropdownButton" + id)
      if blocks.button
        - blocks.button()
      else
    .dropdown__dropdownContener(id="dropdown__dropdownContener" + id)
      if blocks.contener
        - blocks.contener()
      else
