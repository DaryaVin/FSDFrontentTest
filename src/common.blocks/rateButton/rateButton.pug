mixin rateBox(name, rateStatus)
  .rateButton.spaceBetweenContener()&attributes(attributes)
    - for (var i = 1; i <= 5; i++)
      - var checked = false;
      - if (((i == 1) && (rateStatus == 5)) || ((i == 2) && (rateStatus == 4)) || ((i == 3) && (rateStatus == 3)) || ((i == 4) && (rateStatus == 2)) || ((i == 5) && (rateStatus == 1))) checked = true;
      .rateButton__field(class=checked?"checked":"")
      .rateButton__label
        svg.star(width="20", height="19", viewBox="0 0 20 19", fill="none", xmlns="http://www.w3.org/2000/svg")
          +linearGradientForSVG("color2")
          +linearGradientForSVG("color3")
