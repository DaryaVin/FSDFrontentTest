    - for (var i = 1; i <= 5; i++)
      input.rateButton__field(id=name+i, type="radio", name=name)
      label.rateButton__label(for=name+i)
        svg.star(width="20", height="19", viewBox="0 0 20 19", fill="none", xmlns="http://www.w3.org/2000/svg")
          +linearGradientForSVG("color2")
          +linearGradientForSVG("color3")
          path.star_checked(fill="grey", d="M10 15.25L3.8125 19L5.45312 11.9688L0.015625 7.23438L7.1875 6.625L10 0.015625L12.8125 6.625L19.9844 7.23438L14.5469 11.9688L16.1875 19L10 15.25Z")
